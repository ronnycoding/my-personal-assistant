{
  "name": "get_inbox_count",
  "domain": "apple-mail",
  "description": "Get total and unread message counts from Mail inbox",
  "version": "1.0.0",
  "author": "Personal Agents",
  "created": "2025-10-26",
  "parameters": [],
  "returns": {
    "type": "object",
    "properties": {
      "success": {"type": "boolean"},
      "total_messages": {"type": "integer"},
      "unread_messages": {"type": "integer"},
      "timestamp": {"type": "string"}
    },
    "example": {
      "success": true,
      "total_messages": 150,
      "unread_messages": 12,
      "timestamp": "Saturday, October 26, 2025 at 2:30:00 PM"
    }
  },
  "error_handling": {
    "permission_denied": "Check System Settings → Privacy & Security → Automation → Mail"
  },
  "dependencies": {
    "apps": ["Mail"],
    "permissions": ["Mail automation"]
  },
  "tags": ["example", "mail", "simple"],
  "documentation_url": "https://github.com/ronnycoding/my-personal-agents"
}
